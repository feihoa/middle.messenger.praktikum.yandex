<div class="popup-overlay">
  <div class="popup">
    {{{ Button label="❌" type="text" class="close-popup" onClick=closePopup }}}
    <h1 class="popup__header-text">Изменить пароль</h1>
    <div class="popup__content" id="popup">
      {{#> Form}}
        {{{ InputField label="Старый пароль" type="password" name="oldPassword" ref="password" validate=validate.oldPassword }}}
        {{{ InputField label="Новый пароль" type="password" name="newPassword" ref="newPassword" validate=validate.password }}}
        {{{ InputField label="Повторите пароль" type="password" name="newPassword" ref="rePassword" validate=validate.password }}}
        {{{ ErrorLine error=error ref="errorLine"}}}
        {{{ Button label="Сохранить" onClick=onSave }}}
      {{/Form}}
    </div>
  </div>
</div>
